<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="108" id="com.dkurve.betterislamqa" version="2.0.13" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>BetterIslam Q&amp;A</name>
    <description>
        Welcome to Islam Question&amp;Answer
    </description>
    <author email="mohamedazher@gmail.com" href="">
        Mohamed Azher
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
        <preference name="AndroidXEnabled" value="true" />
        <!-- Android 12+ requires a splash screen, minimal branded design -->
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="" />
        <preference name="AndroidWindowSplashScreenBackground" value="#10b981" />
        <preference name="AndroidWindowSplashScreenAnimationDuration" value="100" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/Icon-180.png" width="180" />
        <icon height="60" src="res/ios/Icon-60.png" width="60" />
        <icon height="120" src="res/ios/Icon-120.png" width="120" />
        <icon height="76" src="res/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/ios/Icon-152.png" width="152" />
        <icon height="40" src="res/ios/Icon-40.png" width="40" />
        <icon height="80" src="res/ios/Icon-80.png" width="80" />
        <icon height="87" src="res/ios/Icon-87.png" width="87" />
        <icon height="57" src="res/ios/Icon-57.png" width="57" />
        <icon height="114" src="res/ios/Icon-144.png" width="114" />
        <icon height="72" src="res/ios/Icon-72.png" width="72" />
        <icon height="144" src="res/ios/Icon-144.png" width="144" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
        <icon height="29" src="res/ios/Icon-29.png" width="29" />
        <icon height="58" src="res/ios/Icon-58.png" width="58" />
        <icon height="50" src="res/ios/Icon-50.png" width="50" />
        <icon height="100" src="res/ios/Icon-100.png" width="100" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
        <icon height="1024" src="res/ios/Icon-1024.png" width="1024" />
    </platform>
    <splash height="480" src="res/ios/screen/Default~iphone.png" width="320" />
    <splash height="960" src="res/ios/screen/Default@2x~iphone.png" width="640" />
    <splash height="1024" src="res/ios/screen/Default-Portrait~ipad.png" width="768" />
    <splash height="2048" src="res/ios/screen/Default-Portrait@2x~ipad.png" width="1536" />
    <splash height="768" src="res/ios/screen/Default-Landscape~ipad.png" width="1024" />
    <splash height="1536" src="res/ios/screen/Default-Landscape@2x~ipad.png" width="2048" />
    <splash height="1136" src="res/ios/screen/Default-568h@2x~iphone.png" width="640" />
    <splash height="1334" src="res/ios/screen/Default-667h.png" width="750" />
    <splash height="2208" src="res/ios/screen/Default-736h.png" width="1242" />
    <splash height="1242" src="res/ios/screen/Default-Landscape-736h.png" width="2208" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="android-compileSdkVersion" value="35" />
    <!-- Disable Cordova splash screen for faster app launch -->
    <preference name="SplashScreenDelay" value="0" />
    <preference name="SplashScreen" value="screen" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="^14.0.0" />
    <engine name="ios" spec="^7.0.0" />
</widget>
