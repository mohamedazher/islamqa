{
  "name": "com.dkurve.betterislamqa",
  "version": "1.6.4",
  "displayName": "BetterIslam Q&A",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build --config vite.config.web.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:breakage": "vitest run tests/breakage-detection.test.js",
    "test:features": "vitest run tests/quiz-and-bookmarks.test.js",
    "test:all": "vitest run tests/",
    "version:patch": "node scripts/increment-version.js patch",
    "version:minor": "node scripts/increment-version.js minor",
    "version:major": "node scripts/increment-version.js major",
    "predeploy": "yarn version:patch && yarn test:all && yarn build:web",
    "deploy": "gh-pages -d dist",
    "cordova:prepare": "cordova prepare",
    "cordova:build:android": "yarn version:patch && yarn test:all && yarn build && cordova build android",
    "cordova:build:ios": "yarn version:patch && yarn test:all && yarn build && cordova build ios",
    "cordova:run:android": "yarn build && cordova run android",
    "cordova:emulate:android": "yarn build && cordova emulate android"
  },
  "cordova": {
    "platforms": [
      "ios",
      "android"
    ],
    "plugins": {
      "cordova-plugin-statusbar": {},
      "cordova-plugin-device": {},
      "cordova-plugin-file": {},
      "cordova-plugin-firebase-analytics": {
        "ANALYTICS_COLLECTION_ENABLED": "true",
        "AUTOMATIC_SCREEN_REPORTING_ENABLED": "true",
        "ANDROID_FIREBASE_BOM_VERSION": "30.3.1"
      }
    }
  },
  "dependencies": {
    "cordova-ios": "^7.0.0",
    "dexie": "^4.2.1",
    "firebase": "^11.0.2",
    "fuse.js": "^7.0.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "cordova-android": "^14.0.0",
    "cordova-plugin-device": "^3.0.0",
    "cordova-plugin-file": "^6.0.1",
    "cordova-plugin-firebase-analytics": "^7.0.0",
    "cordova-plugin-statusbar": "^3.0.0",
    "cordova-support-android-plugin": "~2.0.4",
    "es6-promise-plugin": "^4.2.2",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "vitest": "^1.3.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}