<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Header with countdown -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ•Œ Prayer Times"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="#40FFFFFF" />
    </LinearLayout>

    <!-- Prayer times list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Fajr -->
        <LinearLayout
            android:id="@+id/fajr_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fajr"
                android:textSize="11sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/fajr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Dhuhr -->
        <LinearLayout
            android:id="@+id/dhuhr_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dhuhr"
                android:textSize="11sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/dhuhr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Asr -->
        <LinearLayout
            android:id="@+id/asr_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asr"
                android:textSize="11sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/asr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:id="@+id/maghrib_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maghrib"
                android:textSize="11sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/maghrib_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Isha -->
        <LinearLayout
            android:id="@+id/isha_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Isha"
                android:textSize="11sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/isha_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />
        </LinearLayout>
    </LinearLayout>

    <!-- Footer with next prayer label -->
    <TextView
        android:id="@+id/next_prayer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next: --"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingTop="2dp" />

</LinearLayout>
