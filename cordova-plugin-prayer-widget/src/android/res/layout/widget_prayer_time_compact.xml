<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_compact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ•Œ Prayers"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Next Prayer Indicator -->
    <TextView
        android:id="@+id/next_prayer_label_compact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next: Fajr"
        android:textSize="11sp"
        android:textColor="#B0FFFFFF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Divider -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Prayer times list (showing 3 prayers) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Current/Next Prayer -->
        <LinearLayout
            android:id="@+id/prayer1_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/prayer1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fajr"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/prayer1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Second Prayer -->
        <LinearLayout
            android:id="@+id/prayer2_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/prayer2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dhuhr"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/prayer2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Third Prayer -->
        <LinearLayout
            android:id="@+id/prayer3_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/prayer3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asr"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/prayer3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
