<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•Œ"
            android:textSize="18sp"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prayer Times"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Countdown Display (Compact) -->
        <TextView
            android:id="@+id/time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#40FFFFFF"
            android:minWidth="60dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Prayer Times List -->
    <!-- Fajr -->
    <LinearLayout
        android:id="@+id/fajr_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fajr"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/fajr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Dhuhr -->
    <LinearLayout
        android:id="@+id/dhuhr_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dhuhr"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/dhuhr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Asr -->
    <LinearLayout
        android:id="@+id/asr_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Asr"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/asr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Maghrib -->
    <LinearLayout
        android:id="@+id/maghrib_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Maghrib"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/maghrib_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Isha -->
    <LinearLayout
        android:id="@+id/isha_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Isha"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/isha_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Spacer to push footer to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer with next prayer indicator -->
    <TextView
        android:id="@+id/next_prayer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next: Fajr"
        android:textSize="11sp"
        android:textColor="#CCFFFFFF"
        android:textStyle="italic"
        android:gravity="center"
        android:paddingTop="4dp" />

</LinearLayout>
