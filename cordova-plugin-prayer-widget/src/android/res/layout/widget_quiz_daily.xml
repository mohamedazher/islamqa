<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="14dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“š Daily Quiz"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="10dp" />

    <!-- Divider -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"
        android:layout_marginBottom="10dp" />

    <!-- Question -->
    <TextView
        android:id="@+id/quiz_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="What is the first pillar of Islam?"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2dp"
        android:paddingBottom="10dp" />

    <!-- Options Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Option A -->
        <TextView
            android:id="@+id/quiz_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Shahada"
            android:textSize="11sp"
            android:textColor="#E0FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Option B -->
        <TextView
            android:id="@+id/quiz_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Salah"
            android:textSize="11sp"
            android:textColor="#E0FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Option C -->
        <TextView
            android:id="@+id/quiz_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Zakat"
            android:textSize="11sp"
            android:textColor="#E0FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Option D -->
        <TextView
            android:id="@+id/quiz_option_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Hajj"
            android:textSize="11sp"
            android:textColor="#E0FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Spacer -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/quiz_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to see answer"
        android:textSize="10sp"
        android:textColor="#B0FFFFFF"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:gravity="center" />

</LinearLayout>
