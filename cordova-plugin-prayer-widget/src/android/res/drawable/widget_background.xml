<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Modern gradient background with softer teal-to-cyan transition -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#0d9488"
        android:centerColor="#14b8a6"
        android:endColor="#06b6d4" />

    <!-- Softer rounded corners (One UI style) -->
    <corners android:radius="24dp" />

    <!-- Subtle border for depth -->
    <stroke
        android:width="1dp"
        android:color="#25FFFFFF" />

</shape>
